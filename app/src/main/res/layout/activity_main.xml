<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_back"
    android:padding="20dp"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="true">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="70dp"
       android:orientation="vertical">


      <androidx.cardview.widget.CardView
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          app:cardElevation="15dp"
          android:backgroundTint="@color/card_back"
          android:layout_gravity="center"
          app:cardMaxElevation="15dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="10dp"
             android:orientation="vertical">

            <TextView
                android:id="@+id/MainTvWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_hint"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/MainEtWeight"
                   android:layout_width="100dp"
                   android:layout_height="50dp"
                   android:hint="0"
                   android:textColorHint="@color/text_hint"
                   android:textSize="25sp"
                   android:layout_weight="1"
                   android:inputType="number"
                   android:textStyle="bold"/>

               <TextView
                   android:id="@+id/MainTvKg"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Kg"
                   android:textStyle="bold"
                   android:textSize="23sp"
                   android:layout_weight="1"
                   android:layout_gravity="bottom"
                   android:layout_marginLeft="8dp"
                   android:textColor="@color/text_hint"/>


            </LinearLayout>




         </LinearLayout>

      </androidx.cardview.widget.CardView>



      <androidx.cardview.widget.CardView
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          app:cardElevation="15dp"
          android:layout_marginBottom="50dp"
          android:layout_marginTop="25dp"
          android:backgroundTint="@color/card_back"
          android:layout_gravity="center"
          app:cardMaxElevation="15dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:padding="10dp">

            <TextView
                android:id="@+id/MainTvHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_hint"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/MainEtHeight"
                   android:layout_width="100dp"
                   android:layout_height="50dp"
                   android:hint="0"
                   android:textColorHint="@color/text_hint"
                   android:textSize="25sp"
                   android:layout_weight="1"
                   android:inputType="number"
                   android:textStyle="bold"/>

               <TextView
                   android:id="@+id/MainTvCm"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Cm"
                   android:textStyle="bold"
                   android:textSize="23sp"
                   android:layout_marginLeft="8dp"
                   android:layout_weight="1"
                   android:layout_gravity="bottom"
                   android:textColor="@color/text_hint"/>


            </LinearLayout>




         </LinearLayout>

      </androidx.cardview.widget.CardView>


      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/MainBtnCal"
          android:layout_width="200dp"
          android:layout_height="70dp"
          android:layout_gravity="center"
          android:text="Calculator"
          android:textAllCaps="false"
          android:padding="15dp"
          android:textSize="20sp"
          android:background="@color/yellow"
          android:textColor="@color/white"/>


      <androidx.cardview.widget.CardView
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          app:cardElevation="15dp"
          android:layout_marginBottom="50dp"
          android:layout_marginTop="50dp"
          android:backgroundTint="@color/card_back"
          android:layout_gravity="center"
          app:cardMaxElevation="15dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:padding="10dp">

            <TextView
                android:id="@+id/MainTvResultNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>


            <TextView
                android:id="@+id/MainTvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:textColor="@color/green"/>



            <TextView
                android:id="@+id/MainTvRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textColor="@color/text_hint"/>



         </LinearLayout>

      </androidx.cardview.widget.CardView>

   </LinearLayout>

   </ScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>